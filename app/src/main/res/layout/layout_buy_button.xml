<?xml version="1.0" encoding="utf-8"?>
<com.example.yun.expandablebottomlayout.ExpandableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_btn_buy"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buy_button_height"
    android:layout_gravity="bottom"
    android:layout_marginLeft="@dimen/buy_button_margin_left"
    android:layout_marginRight="@dimen/buy_button_margin_right"
    android:layout_marginBottom="@dimen/buy_button_margin_bottom"
    android:elevation="2dp"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_round_shopping_basket" />

        <TextView
            android:id="@+id/tv_btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_button_message"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</com.example.yun.expandablebottomlayout.ExpandableLayout>